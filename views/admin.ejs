<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
    crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  
  <title>Admin Panel</title>
  <style>
    body {
      background-color: rgb(255, 255, 255);
    }
  </style>
</head>

<body>
  <div class="container-fluid mt-5 ">
    <div class="container ">
      <div class=" pb-1 ">
        <nav aria-label="breadcrumb ">
          <ol class="breadcrumb bg-secondary p-3 mb-5">
            <li class="breadcrumb-item"><a href="#" class="text-dark">Home /</a></li>
            <li class="breadcrumb-item"><a href="#" class="text-dark">admin /</a></li>
            <li class="breadcrumb-item"><a href="#" class="text-dark">Inquiry /</a></li>
            <li class="breadcrumb-item " aria-current="page"><a href="#" class="text-dark">...</a></li>
          </ol>
        </nav>
      </div>

      <div class="container">
        <ul class="nav nav-tabs mb-5">
          <li class="active car-info"><a data-toggle="tab" href="#user">User</a></li>
          <li class="car-info"><a data-toggle="tab" href="#car_details">Car</a></li>
          <li class="inq-info"><a data-toggle="tab" href="#inq_details">Inquiry</a></li>
          <li style="margin-left: 740px;"><a href="/">Back to home</a></li>
        </ul>

        <div class="tab-content " style="color: white;">
          <div id="user" class="tab-pane fade in active " style="color: white;">
            <h3 class="mt-5">User information</h3>
            <div class="container mt-5">
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">Username</th>
                    <th scope="col">Mobile No</th>
                    <th scope="col">City</th>
                    <th scope="col">Button</th>
                    <th scope="col">Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let i=0 ; i< a.length; i++){ %>
                    <tr>
                      <td>
                        <%= i+1 %>
                      </td>
                      <td>
                        <%= a[i].name %>
                      </td>
                      <td>
                        <%= a[i].username %>
                      </td>
                      <td>
                        <%= a[i].mobile%>
                      </td>
                      <td>
                        <%= a[i].city%>
                      </td>
                      <td> <button id="toggleButton" class="btn btn-warning">Approve</button>
                      </td> 
                        
                      <td class=""><a href="./admin?ddid=<%= a[i]._id %>"
                          class="btn btn-warning btn-outline-dark">Delete</a></td>
                      </td>
                    </tr>
                    <%}%>

                </tbody>
              </table>
            </div>
          </div>

          <div id="car_details" class="tab-pane fade" >
            <h3>Car Detail's</h3>
            <!--  -->
            <div class="row">
              <div class="col-3 ">
                <nav class="nav nav-tabs border-0 flex-column pt-3 ">
                  <ul class="list-unstyled ">
                    <li class="active"><a data-toggle="tab" class="nav-link text-decoration-none py-3 text-dark"
                        href="#car_info"><i class="fa-solid fa-clock"></i>&nbsp;&nbsp;&nbsp;&nbsp;Car Information</a>
                    </li>
                    <li><a data-toggle="tab" class="nav-link text-dark text-decoration-none py-3" href="#car_data"><i
                          class="fa-solid fa-glasses"></i>&nbsp;&nbsp;&nbsp;&nbsp;Add Car</a></li>
                  </ul>
                </nav>
              </div>
              <div class="col-9">

                <div class="tab-content">
                  <div id="car_info" class="tab-pane fade in active text-dark">
                    <h1 class="text-dark"><i class="fa-solid fa-clock text-dark"></i>&nbsp;&nbsp;Car
                      Information&nbsp;&nbsp;>
                    </h1>
                    <table class="table">
                      <thead>
                        <tr>
                          <th scope="col">No</th>
                          <th scope="col">Car Name</th>
                          <th scope="col">Registration Year</th>
                          <th scope="col">KMS</th>
                          <th scope="col">Fuel Type</th>
                          <th scope="col">image</th>
                          <th></th>
                          <th scope="col" style="padding-left: 37px;">Delete</th>
                          <th scope="col" style="padding-left: 37px;">Update</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% for(let i=0 ; i< b.length; i++){ %>
                          <tr>
                            <td>
                              <%= i+1 %>
                            </td>
                            <td>
                              <%= b[i].car_name %>
                            </td>
                            <td>
                              <%= b[i].reg_year %>
                            </td>
                            <td>
                              <%= b[i].kms %>
                            </td>
                            <td>
                              <%= b[i].fuel_type %>
                            </td>
                            <td>
                              <img src="/images/<%= b[i].car_photo %>" alt="" class="aa">
                            </td>
                            <td>
                            <td class="p-5"><a href="./admin?did=<%= b[i]._id %>"
                                class="btn btn-warning btn-outline-dark">Delete</a></td>
                            </td>
                            <td class="p-5"><a href="/updatecar?uid=<%= b[i]._id %>"
                                class="btn btn-warning btn-outline-dark">Update</a></td>
                            </td>
                          </tr>
                          <%}%>

                      </tbody>
                    </table>


                  </div>

                  <div id="car_data" class="tab-pane fade">
                    <h1 class="text-dark"> <i class="fa-solid fa-glasses"></i>&nbsp;&nbsp;Car data Insert&nbsp;&nbsp;>
                    </h1>
                    <form class=" p-3 bg-white-50" action="/car_sell" method="post" enctype="multipart/form-data">
                      <div class="row">

                        <div class="form-group col-6">
                          <label for="exampleInputEmail1 text-white">Car Name</label>
                          <input type="text" class="form-control" name="car_name" autocomplete="off"
                            id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Car Name">
                          <br>
                        </div>


                        <div class="form-group col-6">
                          <label for="monthInput">Registration Year</label>
                          <input type="month" class="form-control" name="reg_year" autocomplete="off"
                            id="monthInput" aria-describedby="emailHelp" placeholder="Registration Year">
                            <p id="validationMessage"></p>

                        </div>
                        <br>

                        <div class="form-group col-6">
                          <label for="exampleInputPassword1">Kms</label><br>
                          <input type="number" class="form-control" name="kms" autocomplete="off"
                            id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Kms">
                        </div>

                        <div class="form-group col-6">
                          <label for="exampleInputPassword1">Fuel Type</label><br>
                          <select class="form-control" name="fuel_type" autocomplete="off" id="exampleInputEmail1"
                            aria-describedby="emailHelp" placeholder="Fuel Type" required>
                            <option value="Petrol">Petrol</option>
                            <option value="Diesel">Diesel</option>
                            <option value="Electric">Electric</option>
                          </select>
                        </div>

                        <div class="form-group col-6">
                          <label for="exampleInputEmail1">images</label>
                          <input type="file" class="form-control" name="car_photo" autocomplete="off"
                            id="exampleInputEmail1" aria-describedby="emailHelp">
                        </div>

                      </div>
                      <br>
                      <br>
                      <div class="d-flex justify-content-center">
                        <button type="submit" class=" btn btn-secondary btn-outline-dark px-5 text-white" onclick="validateMonth()">Click</button>
                      </div>
                    </form>
                    <br>
                  </div>





                  <!---->
                </div>
                <!-- ---- -->
              </div>
            </div>
          </div>

          <div id="inq_details" class="tab-pane fade">
            <h3 class="mt-5">User information</h3>
            <div class="container mt-5">
              <table class="table">
                <thead>
                  <tr>
                    <th>No</th>
                    <th>First Name</th>
                    <th>Test Driving Date</th>
                    <th>Email</th>
                    <th>Mobile</th>
                    <th>Car choose</th>
                    <th>Any Query</th>
                    <th>Delete</th>
                  </tr>
                </thead>
                <tbody>
                  <% for(let i=0 ; i< c.length; i++){ %>
                    <tr>
                      <td>
                        <%= i+1 %>
                      </td>
                      <td>
                        <%= c[i].uname %>
                      </td>
                      <td>
                        <%= c[i].date %>
                      </td>
                      <td>
                        <%= c[i].email %>
                      </td>
                      <td>
                        <%= c[i].Mobile %>
                      </td>
                      <td>
                        <%= c[i].car_name %>
                      </td>
                      <td>
                        <%= c[i].Query %>
                      </td>
                      <td class="p-5"><a href="./admin?qqid=<%= c[i]._id %>"
                          class="btn btn-warning btn-outline-dark">Delete</a></td>
                      </td>

                    </tr>
                    <%}%>

                </tbody>
              </table>
            </div>
          </div>

        </div>



        <!--  -->
      </div>
      <!--  -->

    </div>
  </div>

</body>
<script>
  const toggleButton = document.getElementById('toggleButton');
  let isApproved = false;

  toggleButton.addEventListener('click', function () {
      isApproved = !isApproved;
      toggleButton.textContent = isApproved ? 'Disapprove' : 'Approve';
  });

